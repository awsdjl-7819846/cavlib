<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cavlib.dao.UserMapper">

	<select id="getImageByPostId" resultType="string">
		select url from user where post_id = #{post_id}
	</select>
	
	<insert id="addImage" parameterType="com.cavlib.beans.Image">
	    insert into user(post_id, url)
	    values (#{post_id}, #{url})
	</insert>
	
</mapper>